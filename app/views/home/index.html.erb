<div class="content-container">
  <div class="container-fluid">
    <div class="row" ng-view>
{{'yet' + '!'}}
    </div>
  </div>
</div>

<div class="alert-container" ng-controller="AlertCtrl">
  <div class="alert alert-success" ng-repeat="alert in alerts">{{alert.message}}</div>
</div>

<nav class="navbar navbar-default navbar-fixed-bottom player-footer">
  <div class="container-fluid" ng-controller="PlayerCtrl" ng-class="{paused: !audio.playing}" ng-click="gotoQueue()">
    <audio media-player="audio" playlist="playlist"></audio>
    <button class="btn" ng-click="audio.prev(); $event.stopPropagation();" ng-disabled="atFirst()">
      <span class="glyphicon glyphicon-backward"></span>
      <span class="sr-only">Previous</span>
    </button>
    <button class="btn" ng-click="audio.playPause(); $event.stopPropagation();" ng-disabled="playlist.length == 0">
      <span ng-show="!audio.playing">
        <span class="glyphicon glyphicon-play"></span>
        <span class="sr-only">Play</span>
      </span>
      <span ng-show="audio.playing">
        <span class="glyphicon glyphicon-pause"></span>
        <span class="sr-only">Pause</span>
      </span>
    </button>
    <button class="btn" ng-click="audio.next(); $event.stopPropagation();" ng-disabled="atLast()">
      <span class="glyphicon glyphicon-forward"></span>
      <span class="sr-only">Next</span>
    </button>

    <span class="current-track">
      <img class="album-placeholder" ng-if="!audio.currentTrack" src="data:image/svg+xml;base64,">
      <img class="album-image" ng-src="/api/albums/{{playlist[audio.currentTrack - 1].album.id}}/image" ng-if="audio.currentTrack">
      <span class="current-track-title">
        <h5 ng-show="playlist.length == 0">
          <span class="title">No tracks queued</span><br/>
          <small class="artist">-</small>
        </h5>
        <h5 ng-show="playlist.length > 0">
          <span class="title">{{playlist[audio.currentTrack - 1].title}}</span><br/>
          <small class="artist">{{playlist[audio.currentTrack - 1].artist.name}}</small>
        </h5>
      </span>
    </span>

    <span class="track-progress">
      <div class="progress">
        <div class="progress-bar" role="progressbar" aria-valuenow="{{audio.formatTime}}" aria-valuemin="0" aria-valuemax="{{audio.formatDuration}}" ng-style="progress()">
          <span class="sr-only">{{audio.formatTime}} / {{audio.formatDuration}}</span>
        </div>
      </div>
    </span>

    <span class="player-time" ng-show="!audio.formatTime">
      00:00 / 00:00
    </span>
    <span class="player-time" ng-show="audio.formatTime">
      {{audio.formatTime}} / {{audio.formatDuration}}
    </span>

    <span class="playlist-actions">
      <button class="btn" ng-click="$event.stopPropagation();" ng-model="repeat" btn-checkbox btn-checkbox-true="true" btn-checkbox-false="false">
        <span class="glyphicon glyphicon-repeat"></span>
        <span class="sr-only">Repeat</span>
      </button>
    <span>
  </div>
</nav>
