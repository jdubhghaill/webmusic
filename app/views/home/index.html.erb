<div ng-controller=MainCtrl>
<nav class="navbar navbar-default navbar-fixed-top" role="navigation" ng-controller="NavCtrl">
  <div class="container-fluid">
    <div class="navbar-fluid">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-content">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a ng-show="isAuthenticated()" class="navbar-brand" href="/"><span class="glyphicon glyphicon-headphones"></span></a>
    </div>
    <div class="collapse navbar-collapse" id="navbar-content">
      <ul class="nav navbar-nav">
        <li ng-show="isAuthenticated()" ng-class="{active: isArtists()}"><a href="/artists">Artists</a></li>
        <li ng-show="isAuthenticated()" ng-class="{active: isAlbums()}"><a href="/albums">Albums</a></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li ng-show="isAuthenticated()" ng-class="{active: isSettings()}"><a href="/collections">Settings</span></a></li>
        <li ng-show="!isAuthenticated()"><a ng-href="/sign_in">Sign in</a></li>
        <li ng-show="isAuthenticated()"><a ng-click='signOut()'>Sign out</a></li>
      </ul>
    </div>
  </div>
</nav>

<div class="content-container">
  <div class="container-fluid">
    <div class="row" ng-view>
    </div>
  </div>
</div>

<div class="alert-container" ng-controller="AlertCtrl">
  <div class="alert alert-success" ng-repeat="alert in alerts">{{alert.message}}</div>
</div>

<nav ng-show="isAuthenticated()" class="navbar navbar-default navbar-fixed-bottom player-footer">
  <audio-player></audio-player>
</nav>
</div>
